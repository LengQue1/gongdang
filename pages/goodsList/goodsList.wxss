/* pages/goodsList/goodsList.wxss */
page {
  background-color: #f8f8f8;
}
.noMore {font-size: 22rpx;color: #999;text-align: center;padding: 25rpx;}
.goodsListTitle {padding: 20rpx;font-size:26rpx;}
.goodsListItem {background-color: #fff;border-bottom: 1px solid #f8f8f8;padding: 20rpx;font-size:24rpx;}
.goodsListItem:last-child {border-bottom: none;}
.goodsInfo {flex-direction: column;padding-left: 15rpx;}
.goodsInfo .goodsTitle{}
.goodsInfo .bookWrp{width: 100%;text-align: left;padding: 15rpx 0;}
.goodsInfo .bookWrp text{background-color: #e12b44;color: #fff;padding: 10rpx 15rpx;border-radius: 10rpx;font-size: 20rpx;}
.goodsInfo .bookWrp .on{}
.goodsInfo .bookWrp .off{background-color: #999;}

.goodsImg {}
.goodsImg image{width:180rpx;height: 180rpx !important;}

.priceBox {justify-content: space-between;width: 100%;position: relative;}
.priceBox .price{color: #e12b44;}
.priceBox .buyBtn{color: #e12b44;border-color: #e12b44;margin: 0;font-size: 20rpx;position: absolute;right: 0;top: -15rpx;}


/*popup*/
.popUpWrp {
  position: fixed;
  width: 100%;
  height: 100%;
  
  top: 0;
  left: 0;
}
.mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  z-index: 20;
}
.popUpWrp .pupupMain {
  height: 70%;
  background-color: #fff;
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 30;
  transform:translateY(100%);
}

.goodsDetail {font-size:24rpx;}
.topMsg {padding: 20rpx 20rpx 0 20rpx;border-bottom: 1px solid #f8f8f8;}
.goodsDetail .imgBox{position: relative;width: 180rpx;height: 180rpx;padding: 5rpx;}
.goodsDetail .imgBox image{width:180rpx;height: 180rpx!important;position: absolute;top: -35rpx;background-color: #fff;padding: 5rpx;box-sizing: border-box;}
.goodsDetail .msgBox{flex: 1;padding-left: 25rpx;align-self: flex-start;}
.goodsDetail .msgBox .title{display: block;padding-bottom: 20rpx;}
.goodsDetail .msgBox .price{color: #e12b44;font-size: 28rpx;}

.sepcBox {padding: 20rpx;}
.sepcBox .sepcTitle{padding-bottom: 20rpx;display: block;}
.sepcBox .sepcItemWrp{justify-content: flex-start;flex-wrap:wrap;}
.sepcBox .sepcItemWrp .specItem{border: 1px solid #eee;padding: 15rpx 45rpx;margin-right: 20rpx;border-radius: 10rpx;margin-bottom: 20rpx;color: #666;}
.sepcBox .sepcItemWrp .specSelect{border-color: #e12b44;color: #e12b44;background-color: #e12b44;color: #fff;}

.goodsDetail .addCart {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #e12b44;
  color: #fff;
  text-align: center;
  font-size: 34rpx;
}

.goodsDetail .buyNumber {
  justify-content: space-between;
  border-top: 1px solid #f8f8f8;
  border-bottom: 1px solid #f8f8f8;
  padding: 35rpx 25rpx;
}

.addSub-grap {border: 1px solid #ccc;border-radius: 3px;width: 200rpx;height:70rpx; overflow: hidden;box-sizing: border-box;}
.addSub-grap text {height: 70rpx;line-height: 70rpx;display: block;flex:0 0 30%;text-align: center;}

.addSub-grap input{border-left: 1px solid #ccc; border-right: 1px solid #ccc;text-align: center;height: 70rpx;flex: 1;  }
.addSub-grap .sub{}
.addSub-grap .add{}
.addSub-grap .number{}
.addSub-grap .disabled{color: #ccc}