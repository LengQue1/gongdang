/* pages/goodsDetails/goodsDetails.wxss */
page {
  background-color: #f8f8f8;
}
swiper  {
  height: 600rpx;
}
.goodsDetailsContainter {
  
}
.swiper-content image{
  width: 100%;
  height: 100%!important; 
}
.goodsDetailsInfo {padding: 25rpx;font-size: 24rpx;background-color: #fff;margin-bottom: 20rpx;}
.goodsDetailsInfo .goodsTitle{display: block;padding-bottom: 15rpx;font-size: 30rpx;}
.goodsDetailsInfo .goodsInfo{justify-content: space-between;padding-bottom: 10rpx;}
.goodsDetailsInfo .goodsInfo .infoWrp{flex: 1;}
.goodsDetailsInfo .goodsInfo .infoWrp .price{color: #e12b44;margin-right: 25rpx;font-size:30rpx;}
.goodsDetailsInfo .goodsInfo .infoWrp .price .strong{font-size: 40rpx;}
.goodsDetailsInfo .goodsInfo .infoWrp .volume{color: #999;font-size: 22rpx;}
.goodsDetailsInfo .goodsInfo .onBook,.goodsDetailsInfo .goodsInfo .offBook {
  padding: 5rpx 10rpx;border-radius: 8rpx;color: #fff;background-color: #e12b44;
  font-size: 20rpx;
}
.goodsDetailsInfo .goodsInfo .offBook {background-color: #ccc;}

.goodsDetailsMain {background-color: #fff;font-size:24rpx;margin-bottom: 120rpx;}
.goodsDetailsMain .tips{padding: 20rpx;color: #999;}
.goodsDetailsMain .rich-html-wrp{padding: 20rpx;}
.goodsDetailsMain .rich-html-wrp image{width: 100%;}

.btmTabbar {height: 120rpx;position: fixed;bottom: 0;left: 0;width: 100%; }
.btmTabbar .left{background-color: #fff;flex: 1;justify-content: flex-start;height: 100%;padding-left: 30rpx;}

.btmTabbar .left .item{flex-direction: column;margin-right: 50rpx;position: relative;}
.btmTabbar .left .item .dot {position: absolute;right: 0;top: 0;width:30rpx;height:30rpx;line-height:30rpx;font-size: 19rpx;background-color: #e12b44;color: #fff;border-radius: 50%;text-align: center;}
.btmTabbar .left .item image{width: 55rpx;}
.btmTabbar .left .item text{color: #999;font-size: 24rpx;padding-top: 5rpx;}
.btmTabbar .right{width: 40%;background-color: #e12b44;color: #fff;text-align: center;height: 120rpx;line-height: 120rpx;font-size: 32rpx;}

/*popup*/
.popUpWrp {
  position: fixed;
  width: 100%;
  height: 100%;
  
  top: 0;
  left: 0;
}
.mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,.5);
  z-index: 20;
}
.popUpWrp .pupupMain {
  height: 70%;
  background-color: #fff;
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 30;
  transform:translateY(100%);
}

.goodsDetail {font-size:24rpx;}
.topMsg {padding: 20rpx 20rpx 0 20rpx;border-bottom: 1px solid #f8f8f8;}
.goodsDetail .imgBox{position: relative;width: 180rpx;height: 180rpx;padding: 5rpx;}
.goodsDetail .imgBox image{width:180rpx;height: 180rpx!important;position: absolute;top: -35rpx;background-color: #fff;padding: 5rpx;box-sizing: border-box;}
.goodsDetail .msgBox{flex: 1;padding-left: 25rpx;align-self: flex-start;}
.goodsDetail .msgBox .title{display: block;padding-bottom: 20rpx;}
.goodsDetail .msgBox .price{color: #e12b44;font-size: 28rpx;}

.sepcBox {padding: 20rpx;}
.sepcBox .sepcTitle{padding-bottom: 20rpx;display: block;}
.sepcBox .sepcItemWrp{justify-content: flex-start;flex-wrap:wrap;}
.sepcBox .sepcItemWrp .specItem{border: 1px solid #eee;padding: 15rpx 45rpx;margin-right: 20rpx;border-radius: 10rpx;margin-bottom: 20rpx;color: #666;}
.sepcBox .sepcItemWrp .specSelect{border-color: #e12b44;color: #e12b44;background-color: #e12b44;color: #fff;}

.goodsDetail .addCart {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #e12b44;
  color: #fff;
  text-align: center;
  font-size: 34rpx;
}

.goodsDetail .buyNumber {
  justify-content: space-between;
  border-top: 1px solid #f8f8f8;
  border-bottom: 1px solid #f8f8f8;
  padding: 35rpx 25rpx;
}

.addSub-grap {border: 1px solid #ccc;border-radius: 3px;width: 200rpx;height:70rpx; overflow: hidden;box-sizing: border-box;}
.addSub-grap text {height: 70rpx;line-height: 70rpx;display: block;flex:0 0 30%;text-align: center;}

.addSub-grap input{border-left: 1px solid #ccc; border-right: 1px solid #ccc;text-align: center;height: 70rpx;flex: 1;  }
.addSub-grap .sub{}
.addSub-grap .add{}
.addSub-grap .number{}
.addSub-grap .disabled{color: #ccc}