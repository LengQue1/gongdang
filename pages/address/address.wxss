/* pages/address/address.wxss */

page {
  background-color: #f8f8f8;
}

.cell-content {
  width: calc(100% + 295rpx);
}

.cell-viceInfo {
  flex: 1;
  text-align: right;
  padding-right: 35rpx;
}

.cell-viceInfo image {
  width: 35rpx;
}

.cell-mainInfo {
  padding-left: 20rpx;
}

.cell-mainInfo text {
  display: block;
}

.cell-mainInfo .name {
  font-weight: bold;
  justify-content: flex-start;
}

.cell-mainInfo .name .default {
  font-size: 20rpx;
  color: #e12b44;
  padding: 0 10rpx;
  border: 1px solid #e12b44;
  font-weight: normal;
  margin-left: 15rpx;
}

.cell-grap .cell {
  padding: 0;
}

.cell-mainInfo .address {
  font-size: 24rpx;
}

.cell-mainInfo .phone {
  color: #999;
  font-size: 24rpx;
}

.addAddress {
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  width: 100%;
  background-color: #fff;
  padding: 25rpx;
}

.addAddress text {
  font-size: 28rpx;
}

.addAddress image {
  width: 35rpx;
  position: relative;
  top: 7rpx;
  margin-right: 10rpx;
}

.operation {
  font-size: 26rpx;
  text-align: center;
  height: 150rpx;
  line-height: 150rpx;
}

.operation .setDefault {
  background-color: #999;
  color: #fff;
  padding: 0 30rpx;
}

.operation .del {
  font-size: 26rpx;
  color: #fff;
  background-color: #e12b44;
  padding: 0 30rpx;
}

