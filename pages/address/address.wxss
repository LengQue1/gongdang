.msg-list {
}

.msg-item {
  width: 100%;
  height: 150rpx;
  border-bottom: 1rpx solid rgb(233, 233, 233);
  position: relative;
  left: 0;
  top: 0;
  overflow: hidden;
}

.msg {
  position: absolute;
  width: 100%;
  height: 150rpx;
  left: 0;
  top: 0;
  z-index: 100;
  background-color: #fff;
}

.editImg {
  flex: 0 0 35rpx;
  text-align: right;
  padding-right: 35rpx;
}

.editImg image {
  width: 35rpx;
}

.addressInfo {
  padding-left: 30rpx;
  flex: 1;
}

.addressInfo text {
  display: block;
}

.addressInfo .nameBox {
    font-weight: bold;
  justify-content: flex-start;
}
.addressInfo .user-name {
}

.addressInfo .default {
  font-size: 20rpx;
  color: #e12b44;
  padding: 0 10rpx;
  border: 1px solid #e12b44;
  font-weight: normal;
  margin-left: 15rpx;
}

.addressInfo .address {
  font-size: 24rpx;
}

.addressInfo .phone {
   color: #999;
  font-size: 24rpx;
}

.msg-menu {
  position: absolute;
  width: 100%;
  height: 150rpx;
  left: 0;
  top: 0;
  z-index: 0;
  background-color: #fff;
}

.menu-delete {
  position: absolute;
  width: 150rpx;
  height: 148rpx;
  top: 1rpx;
  right: 0;
  background-color: rgb(255, 58, 50);
  color: #fff;
  text-align: center;
  line-height: 150rpx;
}

.menu-mark {
  position: absolute;
  width: 200rpx;
  height: 148rpx;
  top: 1rpx;
  right: 150rpx;
  background-color: rgb(200, 199, 205);
  color: #fff;
  text-align: center;
  line-height: 150rpx;
}
